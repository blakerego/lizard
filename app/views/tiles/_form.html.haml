= simple_form_for @tile do |f|
  - if @tile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tile.errors.count, "error")} prohibited this tile from being saved:"
      %ul
        - @tile.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  = f.input :media_type, :as => :select, :collection => Tile.media_types
  = f.input :vimeo_id, :label => "Vimeo ID"
  = f.input :size, :as => :select, :collection => (1..12), :default => "3"

  .actions
    = f.submit 'Save'
